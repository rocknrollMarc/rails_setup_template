<!DOCTYPE html>
<html class="no-js">
  <head>
    <!-- Encoding -->
    <meta charset="utf-8">

    <!-- Force latest IE rendering engine & Chrome Frame. Remove if you use the .htaccess -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Identity -->
    <title><%= yield(:title) || SYSTEM_LABEL %></title>
    <%= tag :meta, name: "keywords", content: yield(:meta_keywords) %>
    <%= tag :meta, name: "description", content: SYSTEM_DESCRIPTION %>
    <%= tag :meta, name: "author", content: SYSTEM_LABEL %>

    <!-- Security -->
    <%= csrf_meta_tags %>

    <!-- Stylesheets -->
    <%= stylesheet_link_tag "application", media: "all" %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-default" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to SYSTEM_LABEL, root_path, class: "navbar-brand" %>
        </div>

        <div class="collapse nav-collapse">
          <%= render_visitor_menu %>
        </div>
      </nav>

      <%= render "shared/flash_messages", flash: flash %>
      <%= yield :breadcrumbs %>
      <%= yield %>

      <footer>
        &copy; <%= SYSTEM_LABEL %>, <%= render_system_version %>
      </footer>
    </div>

    <!-- JavaScripts -->
    <%= javascript_include_tag "application" %>
  </body>
</html>
