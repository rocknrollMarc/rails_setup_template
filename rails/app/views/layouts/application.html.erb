<!DOCTYPE html">
<html class="no-js">
  <head>
		<!-- Encoding -->
	  <meta charset="utf-8">
		
		<!-- Force latest IE rendering engine & Chrome Frame. Remove if you use the .htaccess -->
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

		<!-- Identity -->
		<title><%= yield(:title) || SYSTEM_LABEL %></title>
		<%= tag :meta, :name => "keywords", :content => yield(:meta_keywords) %>
		<%= tag :meta, :name => "description", :content => t("meta.description") %>
		<%= tag :meta, :name => "author", :content => SYSTEM_LABEL %>

		<!-- Security -->
		<%= csrf_meta_tags %>

    <!-- Stylesheets -->
		<%= stylesheet_link_tag "application", media: "screen, projection" %>

    <!-- JavaScripts -->
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <div id="page" class="container">
			<div id="header">
				<div id="label"><%= SYSTEM_LABEL %></div>
				<div id="description"><%= SYSTEM_DESCRIPTION %></div>
				<div id="account"><%= render_account_header_info %></div>
				<div id="navigation">
					<%= render partial: "shared/menus/" + current_route %>
				</div>
			</div>
      <div id="body">
				<%= render_flash_messages %>
				<%= yield :breadcrumbs %>
        <%= yield %>
      </div>
      <div id="footer">
        <p class="center">
					<em>
						&copy; <%= SYSTEM_LABEL %>, <%= render_system_version %><br/>
						Developed by <%= link_to DEVELOPER_LABEL, DEVELOPER_URL %>
					</em>
				</p>
      </div>
    </div>
		<div id="ajax">
			<%= image_tag "#{THEME_ROOT}/images/main/spinner.gif", alt: "spinner" %>
			<p>Please wait...</p>
		</div>
  </body>
</html>
